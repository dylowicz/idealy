<!DOCTYPE html>
<html>
  <head>
    <title>Idealy</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= favicon_link_tag 'idea.svg', type: 'image/svg' %>
    <link href="https://fonts.googleapis.com/css?family=Raleway:100" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to root_path, class: 'navbar-brand', id: 'navbar-home' do %>
            <%= image_tag "idea.svg", id: 'navbar-idea-icon' %>
            IDEALY
          <% end %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" id="navbar-user" data-toggle="dropdown">
                <span class="glyphicon glyphicon-user"></span>
                <span id="navbar-user-name"><%= current_user.name %></span>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Log out', logout_path, id: 'navbar-user-logout', method: :delete %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Sign in', login_path, id: 'navbar-user-login' %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <% flash.each do |message_type, message| %>
            <div class="text-center alert alert-<%= message_type %>" id="flash-message-box"><%= message %></div>
          <% end %>
        </div>
      </div>

      <%= yield %>

    </div>
  </body>
</html>
