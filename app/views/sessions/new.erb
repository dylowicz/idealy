<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Log in</h1>
    <div class="well">
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, class: 'form-control', id: 'email-textfield', placeholder: "E-mail", autofocus: true %>
        <br/>
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, class: 'form-control', id: 'password-textfield', placeholder: "Password" %>
        <br/>
        <%= f.submit "Log in", class: 'btn btn-primary', id: 'login-button' %>
      <% end %>

      <span>Not registered yet? <%= link_to "Sign up now!", signup_path, id: 'sign-up-link' %></span>
    </div>
  </div>
</div>
