<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center">Edit Idea</h1>
    <div class="well">
      <%= form_for @idea do |f| %>
          <div class="form-group">
            <%= f.label :title %><br/>
            <%= f.text_field :title, class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.label :description %><br/>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :status %><br/>
            <%= f.select :status, Idea.statuses.keys, {}, { class: 'form-control' } %>
          </div>

          <div class="form-group">
            <%= f.submit class: "btn btn-primary" %>
            <%= link_to 'Cancel', @idea %>
            <%= link_to '', idea_path(@idea),
                        class: 'glyphicon glyphicon-trash pull-right',
                        id: "delete-idea",
                        method: :delete,
                        data: { confirm: "Do you really want to delete this Idea?" }
            %>
          </div>
      <% end %>

    </div>
  </div>
</div>